@using NetPing_modern.Helpers
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Development</title>
    <meta charset="utf-8">
    <link href="/Content/Images/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <link href="~/Content/Themes/reset.css" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" type="text/css" href="~/Content/Themes/header-footer.css">
    <link rel="stylesheet" type="text/css" href="~/Content/Themes/DevelopmentPageStyle.css">
    <link rel="stylesheet" type="text/css" href="~/Content/Themes/responsiveslides.css">
    <link rel="stylesheet" type="text/css" href="~/Content/Themes/slide.css">
    <link rel='stylesheet' type='text/css' href='~/Content/Themes/cart.css'>

    @if (NetpingHelpers.Helpers.IsCultureEng)
    {
        <link rel="stylesheet" type="text/css" href="~/Content/Themes/shutter_eng.css">
    }
    else
    {
        <link rel="stylesheet" type="text/css" href="~/Content/Themes/shutter.css">
    }
    <link href="~/Content/Themes/tinycarousel.css" rel="stylesheet" />
    <script src="~/Content/JavaScript/jquery1.8.3min.js"></script>
    <script src="~/Content/JavaScript/modernizr.js"></script>
    <script src="~/Content/JavaScript/jquery.siblingsshutter.js"></script>
    <script src="~/Content/JavaScript/main.js"></script>
    @Html.GoogleAnalytics()
</head>
<body>
    <div class="page">
        <div class="main">
            @RenderPage("../Shared/Header.cshtml")

            <div style="display: none">
                <p class="Price">
                    @* @Model.Price*@
                </p>
                <p class="ID">
                    @*@Model.Name.Id*@
                </p>
                <p class="Key">
                    @*@Model.Key.Replace("#", "")*@
                </p>
                <p class="Name">
                    @*@Model.Name.Name*@
                </p>
                <p class="PhotoURL">
                    @*@Model.GetCoverPhoto(true).Url*@
                </p>
            </div>

            <div class="content">
                <div class="steps">
                    <ul>
                        <li>Планируем</li>
                        <li>Разрабатываем</li>
                        <li>Сертифицируем</li>
                    </ul>
                    <div class="clear"></div>
                </div>
                <div class="title">
                    Мы постоянно ведём работу над созданием новых устройств.<br />
                    Предлагаем ознакомиться с характеристиками проектируемого устройства
                    <h1>Netping Device Name</h1>
                </div>
                <div class="item">
                    <div class="left sub">
                        <div id="wrapper1">

                            <ul class="rslides" id="slider3">
                                <li><img class="bigImageSize" src="http://netping.ru/Pub/Photos/_nping_bases_UniPing_server_v3_SMS_big.png" alt="" title="" /></li>
                                <li><img class="bigImageSize" src="http://netping.ru/Pub/Photos/_nping_bases_UniPing_server_v3_SMS_big1.png" alt="" title="" /></li>
                            </ul>
                            <div id="slider3-pager-nav">
                                <ul id="slider3-pager">
                                    <li><a href="#"><img class="smalImageSize" src="http://netping.ru/Pub/Photos/_nping_bases_UniPing_server_v3_SMS_small.png" alt=""></a></li>
                                    <li><a href="#"><img class="smalImageSize" src="http://netping.ru/Pub/Photos/_nping_bases_UniPing_server_v3_SMS_small1.png" alt=""></a></li>

                                </ul>
                            </div>
                            <div class="seporator"></div>

                            <a style="cursor: pointer" id="shopItem" class="cart price">5000<span>&nbsp;руб.</span></a>
                            <span id="searchIcon"></span>
                            <div class="clear"></div>
                        </div>
                    </div>

                    <div class="right sub">
                        <div class="text">
                            @*@Html.Raw(Model.Short_description)*@
                            <div class="wiki-content" style=""><p style=""><strong style="">Устройство удалённого мониторинга датчиков по сети Ethernet/Internet. Позволяет удалённо получать информацию о состоянии датчиков и уведомления о срабатывании датчиков</strong></p><ul style=""><li style="">2 х 10/100- BASE-TX Ethernet порта;</li><li style="">Подключение к <span style="">WiFi сети </span>(при помощи <strong style="">VAP11N</strong>);</li><li style=""><strong style="">Встроенный GSM модем для SMS-уведомлений о срабатывании датчиков;</strong></li><li style="">Металлический корпус для установки в стойку 19'&nbsp; 1U;</li><li style=""><strong style="">Поддержка 1-wire датчиков;</strong></li><li style="">8 IO линий для подключения внешних датчиков или управления внешними устройствами;</li><li style="">Подключаются внешние датчики: температуры, двери, протечки, наличия 220В, влажности, удара, дыма, движения, разбития стекла;</li><li style="">Порт RS485 (подключение внешних счётчиков электроэнергии);</li><li style="">Встроенное реле для управления сиреной или "маячком" локальной индикации;</li><li style="">Резервное бесперебойное питание при помощи <a class="external-link" href="http://netping.ru/product_item?id=_nping_bases_mini_UPS" rel="nofollow" style=""><span style=""><font style="">Netping mini-UPS</font></span></a>.</li></ul></div>
                        </div>
                    </div>
                    <div class="clear"></div>

                </div>

                <div class="preorder-invite">
                    Если вас заинтересовало данное устройство, разместите предзаказ на него.<br />
                    Это вас ни к чему не обязывает, но очень поможет нам оценить популярность этого устройства и выпустить его как можно быстрее!
                </div>
                <div class="preorder">
                    <div class="preorder-text">
                        Мы уведомим вас по Email, когда устройство будет доступно к продаже и предложим  <span>20% скидку</span> от розничной цены
                        <div class="preorder-price"><div class="preorder-price-old">9130 руб.</div><div class="preorder-price-new">7300 руб.</div></div>
                        <div class="preorder-only-for">
                            (Только для разместивших предзаказ)
                        </div>
                    </div>
                    <div class="preorder-form">
                        Сделать предварительный заказ
                        <form>
                            <input type="text" placeholder="Введите ваше имя" />
                            <div class="preorder-email">
                                <input type="email" placeholder="Введите e-mail" /><input class="subscribe_image" type="image" src="~/Content/Images/subscribe_button.png"></input>
                            </div>
                        </form>
                    </div>
                    <div class="clear"></div>
                </div>


                <div class="tabs-desc">
                    <div class="clearfix tabs">
                        <div class="tab active" data-tab-id="5">Описание</div>
                        <div class="tab" data-tab-id="1">Спецификация</div>
                        <div class="tab" data-tab-id="2">Файлы</div>
                    </div>


                    <div class="tabs-cont">

                        <div class="tab-c shown longdescription" data-tab-id="5">
                            @*description goes here*@
                        </div>

                        <div class="tab-c" data-tab-id="1">
                            @*specs go here*@
                        </div>

                        <div class="tab-c" data-tab-id="2">
                            @*files go here*@
                        </div>
                    </div>
                </div>
                <div class="clear"></div>

                <div class="comments-invite">
                    Включайтесь в обсуждение нового устройства
                </div>

            </div>
            @RenderPage("../Shared/Footer.cshtml")
        </div>

        <div class="overlay"></div>
        <div class="popup" id="popup1"></div>
    </div>

    <script src="~/Content/JavaScript/ProductItem.js" type="text/javascript"> </script>
    <script src="~/Content/JavaScript/jquery.tinycarousel.min.js"></script>
    <script src="~/Content/JavaScript/responsiveslides.min.js" type="text/javascript"> </script>
    <script src="~/Content/JavaScript/slider1.js" type="text/javascript"> </script>

    @RenderPage("../Shared/Cart.cshtml")

</body>
</html>

